public class TestBubbleSort {
    public static void main() {
        println("=== Bubble Sort Tests ===");
        int[] arr = {64, 34, 25, 12, 22, 11, 90};
        print("Original: ");
        for (int i = 0; i < arr.length; i = i + 1) {
            print(arr[i]);
            if (i < arr.length - 1) {
                print(", ");
            }
        }
        println("");
        for (int i = 0; i < arr.length - 1; i = i + 1) {
            for (int j = 0; j < arr.length - i - 1; j = j + 1) {
                if (arr[j] > arr[j + 1]) {
                    int temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                }
            }
        }
        print("Sorted: ");
        for (int i = 0; i < arr.length; i = i + 1) {
            print(arr[i]);
            if (i < arr.length - 1) {
                print(", ");
            }
        }
        println("");
        println("All bubble sort tests completed!");
    }
}
