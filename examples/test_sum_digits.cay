public class TestSumDigits {
    public static int sumDigits(int n) {
        int sum = 0;
        while (n > 0) {
            sum = sum + (n % 10);
            n = n / 10;
        }
        return sum;
    }

    public static void main() {
        println("=== Sum Digits Tests ===");
        println(sumDigits(12345));
        println(sumDigits(9876));
        println("All sum digits tests completed!");
    }
}
