public class TestPostDecrement {
    public static void main() {
        println("=== Post-Decrement Tests ===");
        int a = 5;
        print("a before: ");
        println(a);
        a = a - 1;
        print("a after decrement: ");
        println(a);
        int b = 10;
        print("b before: ");
        println(b);
        b = b - 1;
        print("b after decrement: ");
        println(b);
        println("All post-decrement tests completed!");
    }
}
