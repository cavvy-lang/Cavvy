// 测试字符字面量
class TestCharLiterals {
    public static void main() {
        println("=== Char Literals Tests ===");
        
        // Test simple characters
        char a = 'A';
        println("char 'A' = 65 (ASCII)");
        
        char z = 'z';
        println("char 'z' = 122 (ASCII)");
        
        char zero = '0';
        println("char '0' = 48 (ASCII)");
        
        // Test space
        char space = ' ';
        println("char ' ' (space) = 32 (ASCII)");
        
        // Test escape sequences in char
        char newline = '\n';
        println("char '\\n' = 10 (ASCII)");
        
        char tab = '\t';
        println("char '\\t' = 9 (ASCII)");
        
        char backslash = '\\';
        println("char '\\\\' = 92 (ASCII)");
        
        char quote = '\'';
        println("char '\\'' = 39 (ASCII)");
        
        // Skip double quote in char - not supported by lexer
        // char dquote = '"';
        println("char double quote skipped");
        
        char carriage = '\r';
        println("char '\\r' = 13 (ASCII)");
        
        // Test char arithmetic
        char c = 'A';
        int next = c + 1;
        println("'A' + 1 = 66 (ASCII of 'B')");
        
        // Test char comparison
        bool result = 'A' < 'B';
        println("'A' < 'B' = true");
        
        result = 'z' > 'a';
        println("'z' > 'a' = true");
        
        println("=== All char literal tests completed! ===");
    }
}
