public class TestStaticArray {
    static int[] arr;

    public static void main() {
        println("=== Static Array Tests ===");
        println("Initial zero vector:");
        arr = new int[5];
        print("arr[0]=");
        println(arr[0]);
        print("arr[1]=");
        println(arr[1]);
        print("arr[2]=");
        println(arr[2]);
        
        println("After setting values:");
        arr[0] = 10;
        arr[1] = 20;
        arr[2] = 30;
        print("arr[0]=");
        println(arr[0]);
        print("arr[1]=");
        println(arr[1]);
        print("arr[2]=");
        println(arr[2]);
        
        int sum = arr[0] + arr[1] + arr[2];
        print("Sum:");
        println(sum);
        println("All static array tests completed!");
    }
}
