public class TestArrayReverse {
    public static void main() {
        println("=== Array Reverse Tests ===");
        int[] arr = {1, 2, 3, 4, 5};
        print("Original: ");
        for (int i = 0; i < arr.length; i = i + 1) {
            print(arr[i]);
            if (i < arr.length - 1) {
                print(", ");
            }
        }
        println("");
        for (int i = 0; i < arr.length / 2; i = i + 1) {
            int temp = arr[i];
            arr[i] = arr[arr.length - 1 - i];
            arr[arr.length - 1 - i] = temp;
        }
        print("Reversed: ");
        for (int i = 0; i < arr.length; i = i + 1) {
            print(arr[i]);
            if (i < arr.length - 1) {
                print(", ");
            }
        }
        println("");
        println("All array reverse tests completed!");
    }
}
